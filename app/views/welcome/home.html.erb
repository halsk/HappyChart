}
.cap {
    font-size: 12pt;
    border-radius: 5px;
    display: inline-block;
    _display: inline;
    border: 1px;
    cursor: help;
    display: block;
    line-height: 1.5;
}

.cap .t {
    font-size: 16pt;
    display: inline-block;
    _display: inline;
}
